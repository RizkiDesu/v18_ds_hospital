<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_config_settings_ds_hospital_outpatient_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.ds.hospital.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="ds_hospital_base.res_config_settings_ds_hospital_view_form"/>
            <field name="arch" type="xml">
            
                <xpath expr="//div[@id='hospital_base']" position="after">

                        <h2>Hospital Outpatient Services</h2>
                        <div id="ds_hospital_outpatient_services" class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Outpatient Services</span>
                                    <div class="text-muted">
                                        <field name="registration_outpatient_service" string="Outpatient Services"/>
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Outpatient Services Product</span>
                                    <div class="text-muted">
                                        <field name="registration_outpatient_product" string="Outpatient Product"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
